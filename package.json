{
  "name": "founderhq",
  "private": true,
  "type": "module",
  "version": "1.0.0",
  "description": "FounderHQ - A Setique Tool for Founders",
  "author": "Setique",
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "build": "node scripts/validate-env.js && vite build",
    "build:skip-validation": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:rls": "vitest run tests/rls",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
  "test:e2e:report": "playwright show-report",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "build:analyze": "vite build --mode analyze",
    "docker:build": "docker build -t setique-dashboard .",
    "docker:run": "docker run -p 3000:80 setique-dashboard",
    "generate-types": "./scripts/generate-types.sh",
    "types": "./scripts/generate-types.sh",
    "electron:dev": "concurrently \"cross-env BROWSER=none npm run dev\" \"wait-on http://localhost:3000 && cross-env NODE_ENV=development electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:build:win": "npm run build && electron-builder --win",
    "electron:build:mac": "npm run build && electron-builder --mac",
    "electron:build:linux": "npm run build && electron-builder --linux"
  },
  "build": {
    "appId": "com.setique.founderdashboard",
    "productName": "Setique: Founder Dashboard",
    "directories": {
      "buildResources": "build",
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.business",
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Office",
      "icon": "build/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@hookform/resolvers": "^5.2.2",
    "@sentry/react": "^10.23.0",
    "@stripe/stripe-js": "^8.2.0",
    "@supabase/supabase-js": "^2.80.0",
    "@tanstack/react-query": "^5.90.7",
    "@tiptap/extension-bubble-menu": "^3.10.5",
    "@tiptap/extension-character-count": "^3.10.7",
    "@tiptap/extension-collaboration": "^3.10.8",
    "@tiptap/extension-collaboration-cursor": "^2.26.2",
    "@tiptap/extension-color": "^3.10.7",
    "@tiptap/extension-dropcursor": "^3.10.7",
    "@tiptap/extension-focus": "^3.10.7",
    "@tiptap/extension-font-family": "^3.10.7",
    "@tiptap/extension-font-size": "^3.0.0-next.3",
    "@tiptap/extension-gapcursor": "^3.10.7",
    "@tiptap/extension-highlight": "^3.10.7",
    "@tiptap/extension-image": "^3.10.7",
    "@tiptap/extension-link": "^3.10.7",
    "@tiptap/extension-placeholder": "^3.10.5",
    "@tiptap/extension-subscript": "^3.10.7",
    "@tiptap/extension-superscript": "^3.10.7",
    "@tiptap/extension-table": "^3.10.7",
    "@tiptap/extension-table-cell": "^3.10.7",
    "@tiptap/extension-table-header": "^3.10.7",
    "@tiptap/extension-table-row": "^3.10.7",
    "@tiptap/extension-task-item": "^3.10.7",
    "@tiptap/extension-task-list": "^3.10.7",
    "@tiptap/extension-text-align": "^3.10.7",
    "@tiptap/extension-text-style": "^3.10.7",
    "@tiptap/extension-typography": "^3.10.7",
    "@tiptap/extension-underline": "^3.10.7",
    "@tiptap/extension-youtube": "^3.10.7",
    "@tiptap/react": "^3.10.5",
    "@tiptap/starter-kit": "^3.10.5",
    "@tiptap/y-tiptap": "^3.0.1",
    "crypto-js": "^4.2.0",
    "date-fns": "^4.1.0",
    "emoji-picker-react": "^4.15.0",
    "fast-json-patch": "^3.1.1",
    "html-to-image": "^1.11.13",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.3",
    "lucide-react": "^0.552.0",
    "react": "^19.2.0",
    "react-colorful": "^5.6.1",
    "react-dom": "^19.2.0",
    "react-dropzone": "^14.3.8",
    "react-hook-form": "^7.66.0",
    "react-hot-toast": "^2.6.0",
    "react-image-crop": "^11.0.10",
    "react-markdown": "^9.0.1",
    "react-router-dom": "^7.9.6",
    "react-virtualized-auto-sizer": "^1.0.26",
    "react-window": "^2.2.3",
    "recharts": "^3.3.0",
    "remark-gfm": "^4.0.0",
    "stripe": "^19.2.0",
    "turndown": "^7.2.2",
    "uuid": "^13.0.0",
    "y-prosemirror": "^1.3.7",
    "y-supabase": "^0.0.4-7-alpha",
    "yjs": "^13.6.27",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@playwright/experimental-ct-react": "^1.56.1",
    "@playwright/test": "^1.56.1",
    "@sentry/vite-plugin": "^4.6.0",
    "@tailwindcss/postcss": "^4.1.16",
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^22.14.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/ui": "^4.0.8",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.0.0",
    "electron-builder": "^26.0.12",
    "eslint": "^8.57.0",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^4.6.2",
    "png-to-ico": "^3.0.1",
    "postcss": "^8.5.6",
    "supabase": "^2.54.11",
    "tailwindcss": "^4.1.16",
    "terser": "^5.44.0",
    "to-ico": "^1.1.5",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "vite-bundle-analyzer": "^1.2.3",
    "vitest": "^4.0.8",
    "wait-on": "^9.0.1"
  }
}
